{
  "branches": ["main"],
  "plugins": [
    ["@semantic-release/commit-analyzer",
    ["@semantic-release/release-notes-generator", {
      "preset": "conventionalcommits",
      "presetConfig": {
        "types": [
          { "type": "feat", "section": "Features" },
          { "type": "fix", "section": "Bug Fixes" },
          { "type": "style", "section": "Styling, UI, Code Cleanup, and Linting Fixes", "hidden": false },
          { "type": "docs", "section": "Documentation Changes", "hidden": false },
          { "type": "perf", "section": "Performance Improvements" },
          { "type": "refactor", "section": "Code Refactoring", "hidden": false }
        ]
      }
    }],
    ["@semantic-release/changelog", {
      "changelogFile": "CHANGELOG.md"
    }],
    ["@semantic-release/exec", {
      "prepareCmd": "sed -i 's/version = \".*\"/version = \"${nextRelease.version}\"/' pyproject.toml && sed -i 's/framework_version = \".*\"/framework_version = \"${nextRelease.version}\"/' src/dopamine_framework/ext/path.py"
    }],
    ["@semantic-release/git", {
      "assets": ["pyproject.toml", "src/dopamine_framework/ext/path.py", "CHANGELOG.md"],
      "message": "chore(release): ${nextRelease.version} [skip ci]"
    }],
    "@semantic-release/github"
  ]]
}